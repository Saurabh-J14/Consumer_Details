<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textDt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DT Name"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/dtLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textDt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <AutoCompleteTextView
            android:id="@+id/dtname"
            style="@style/tag_spinner_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="DT Name"
            android:inputType="textNoSuggestions"
            android:textSize="12sp"
            android:paddingVertical="8dp"/>

        <Button
            android:id="@+id/btnDtAction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:paddingHorizontal="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
