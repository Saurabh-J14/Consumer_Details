<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Outer circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#495656"/>
            <size
                android:width="200dp"
                android:height="200dp"/>
        </shape>
    </item>

    <!-- Camera icon center -->
    <item
        android:drawable="@drawable/photo_camera"
        android:width="80dp"
        android:height="80dp"
        android:gravity="center"/>
</layer-list>
